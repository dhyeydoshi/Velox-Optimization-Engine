# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# ================================
# Application Configuration
# ================================
APP_NAME=Velox Optimization Engine
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=WARN
ENABLE_API_DOCS=False
FEATURE_EVOLUTIONARY_SEARCH=false


# ================================
# Database Configuration
# ================================
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:password@localhost:5432/code_optimizer


# ================================
# Redis Configuration
# ================================
# Redis connection string
REDIS_URL=redis://localhost:6379/11

# Redis key prefix for app-level key isolation on shared Redis
REDIS_KEY_PREFIX=code_optimizer_ai

# ================================
# LLM Routing Configuration
# ================================
# OpenRouter API key (primary cloud route)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter base URL
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# OpenRouter primary and secondary models
OPENROUTER_PRIMARY_MODEL=qwen/qwen3-coder:free
OPENROUTER_SECONDARY_MODEL=deepseek/deepseek-r1-0528:free

# Optional Ollama fallback (must be reachable from runtime host/container)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# Optional legacy provider keys (kept for compatibility)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ================================
# Security Configuration
# ================================
# Secret key for JWT tokens and sessions
SECRET_KEY=your_very_secret_key_change_in_production

TESTING=False

REQUIRE_AUTH_TOKEN=True
API_AUTH_TOKEN=your_secure_api_token_here

# ================================
# Performance Monitoring
# ================================
# How long to keep metrics (in days)
METRICS_RETENTION_DAYS=90

# How often to collect baseline metrics (in seconds)
BASELINE_COLLECTION_INTERVAL=300


# ================================
# Optimization Settings
# ================================
# Maximum optimization attempts per file
MAX_OPTIMIZATION_ATTEMPTS=3

# Minimum performance improvement required (0.05 = 5%)
MIN_PERFORMANCE_IMPROVEMENT=0.05

# Analysis timeout in seconds
ANALYSIS_TIMEOUT_SECONDS=30

# GitHub repository clone settings for /scan/repository and /optimize/repository
GITHUB_CLONE_ROOT=./.tmp_remote_repos
GITHUB_CLONE_TIMEOUT_SECONDS=120

# ================================
# RL Training Configuration
# ================================
# Path to save RL models
RL_MODEL_PATH=./models/rl_policy

# Path for training data
TRAINING_DATA_PATH=./data/training


# ================================
# Agent Configuration
# ================================
# Monitoring interval in seconds
MONITORING_INTERVAL=60

# Number of files to analyze in each batch
ANALYSIS_BATCH_SIZE=10

# Maximum concurrent analysis tasks
MAX_CONCURRENT_ANALYSIS=4

# ================================
# Logging Configuration
# ================================
# Enable error tracking with Sentry
ENABLE_SENTRY=false

# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here
